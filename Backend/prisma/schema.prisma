generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}






model user {
  id             String   @id @default(cuid())
  email          String   @unique
  phoneNumber    String
  hashedPassword String
  name           String
  userType       String
  profilePhoto   Bytes?
  userAddress    String
  notifications  Notification[]
  appointments   appointment[]
}

model serviceProvider {
  id             String   @id @default(cuid())
  email          String   @unique
  businessName   String
  businessAddress String
  phoneNumber    String
  hashedPassword String
  userType       String
  services       String
  profilePhoto   Bytes?
  bio            String
  priceRange     String
  appointments   appointment[]
  reviews        review[]
  media          media[]
  service        Service[]
  schedule       Json?
}

model appointment {
  id                String   @id @default(cuid())
  date              DateTime
  time              String
  customerId        String
  description       String
  serviceProviderId String
  serviceProvider   serviceProvider @relation(fields: [serviceProviderId], references: [id])
  user              user            @relation(fields: [customerId], references: [id])
}

model review {
  id                String   @id @default(cuid())
  text              String
  rating            Int
  customerId        String
  serviceProviderId String
  serviceProvider   serviceProvider @relation(fields: [serviceProviderId], references: [id])
}

model media {
  id                String   @id @default(cuid())
  url               String
  type              String
  serviceProviderId String
  serviceProvider   serviceProvider @relation(fields: [serviceProviderId], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    String
  message   String
  delivered Boolean @default(false)
  user      user     @relation(fields: [userId], references: [id])
}

model Service {
  id                String   @id @default(cuid())
  name              String
  description       String
  price             Float
  serviceProviderId String
  serviceProvider   serviceProvider @relation(fields: [serviceProviderId], references: [id])
  duration          Int
}
