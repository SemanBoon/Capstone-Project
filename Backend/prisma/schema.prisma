generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  phoneNumber Int
  hashedPassword String
  name     String
  profilePhoto String?
  userAddress String?
}

model ServiceProvider {
  id       String   @id @default(cuid())
  email String @unique
  businessName     String
  businessAddress    String?
  phoneNumber   Int
  hashedPassword String
  services String?
  profilePhoto String?
  coverPhoto String?
}
