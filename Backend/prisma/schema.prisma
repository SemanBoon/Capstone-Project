generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id             String   @id @default(cuid())
  email          String   @unique
  phoneNumber    String
  hashedPassword String
  name           String
  userType       String
  profilePhoto   Bytes?
  userAddress    String
}

model serviceProvider {
  id             String   @id @default(cuid())
  email          String   @unique
  businessName   String
  businessAddress String
  phoneNumber    String
  hashedPassword String
  userType       String
  services       String
  profilePhoto   Bytes?
  bio            String
  priceRange     String
  appointments   appointment[]
  reviews        review[]
  media          media[]
}

model appointment {
  id                String   @id @default(cuid())
  date              DateTime
  time              DateTime
  customerId        String
  serviceProviderId String
  serviceProvider   serviceProvider @relation(fields: [serviceProviderId], references: [id])
}

model review {
  id                String   @id @default(cuid())
  text              String
  rating            Int
  customerId        String
  serviceProviderId String
  serviceProvider   serviceProvider @relation(fields: [serviceProviderId], references: [id])
}

model media {
  id                String   @id @default(cuid())
  url               String
  type              String
  serviceProviderId String
  serviceProvider   serviceProvider @relation(fields: [serviceProviderId], references: [id])
}
