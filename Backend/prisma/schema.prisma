generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  phoneNumber Int
  hashedPassword String
  name     String
  profilePhoto String?
  userAddress String?
  refreshTokens RefreshToken[]
}

model ServiceProvider {
  id       String   @id @default(cuid())
  email String @unique
  businessName     String
  businessAddress    String
  phoneNumber   Int
  hashedPassword String
  services String
  profilePhoto String
  coverPhoto String
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id       String   @id @default(cuid())
  token     String
  userId    String?
  providerId String?
  user      User?     @relation(fields: [userId], references: [id])
  provider   ServiceProvider?     @relation(fields: [providerId], references: [id])
}

